 long long countWays(int n)
    {
        
        long long dp[n+1];
        if(n<=2)return n;
        
        dp[0]=0;dp[1]=1;dp[2]=2;dp[3]=4;
        for(long long i=4;i<=n;i++)
        dp[i]=(dp[i-1]%1000000007+dp[i-2]%1000000007+dp[i-3]%1000000007)%1000000007;
        return dp[n];
       
        
    }
