// variation of longest increasing subseq.
bool myCmp(val p1,val p2)
{
    return p1.first<=p2.first;
}
int maxChainLen(struct val p[],int n)
{
    int result=1;
       sort(p,p+n,myCmp);
      int dp[n];
      for(int i=0;i<n;i++)
      dp[i]=1;
      for(int i=1;i<n;i++)
      {
          for(int j=0;j<i;j++)
          {
              if(p[i].first>p[j].second)
              dp[i]=max(dp[i],dp[j]+1);
          }
          result=max(dp[i],result);
      }
      return result;
}
