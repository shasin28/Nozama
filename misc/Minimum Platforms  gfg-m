  int findPlatform(int arr[], int dep[], int n)
    {
    
    	sort(arr,arr+n);
    	sort(dep,dep+n);
    
    	
    	int minm=1,res=1;
    	int i=1,j=0;
    	while(i<n&&j<n)
    	{
    	    if(arr[i]>dep[j])
    	    {
    	        j++;
    	        minm--;
    	    }
    	    else
    	    {
    	        minm++;i++;
    	    }
    	    res=max(res,minm);
    	}
    
    	return res;
    }
